<UserControl x:Class="WPFToDoApp.Views.ToDoControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WPFToDoApp.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <StackPanel Name="TaskListSidebar"  Margin="0,0,570,0">
            <Label Content="{Binding Path=LastTaskName, Mode=OneWay}"/>
            <Button Content="Show Task"/>

        </StackPanel>
        <TextBox Text ="{Binding Path = NewTaskName, Mode = TwoWay}" HorizontalAlignment="Left" Margin="262,251,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="500" Height="26"/>
        <TextBox Text ="{Binding Path = NewTaskDescription, Mode = TwoWay}" HorizontalAlignment="Left" Margin="262,313,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="500" Height="26"/>
        <Label Content="Task Name" HorizontalAlignment="Left" Margin="262,217,0,0" VerticalAlignment="Top" Width="138"/>
        <Label Content="Task Description" HorizontalAlignment="Left" Margin="262,282,0,0" VerticalAlignment="Top" Width="138"/>
        <Button Content="Add Task" Command="{ Binding AddTask }" CommandParameter="{Binding}" HorizontalAlignment="Left" Margin="262,360,0,0" VerticalAlignment="Top" Width="138" Click="Button_Click"/>
    </Grid>
</UserControl>
